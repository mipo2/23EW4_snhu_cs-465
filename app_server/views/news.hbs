<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>

<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>

<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								{{#each newsElements.sidebars}}
								<h3>{{this.title}}</h3>
								<ul>
									{{#each this.articles}}
									<li>
										<a href="{{this.uri}}">{{this.name}}</a>
									</li>
									{{/each}}
								{{/each}}
							</div>
							<div>
								<h1>News</h1>
						{{#each newsElements.articles}}
								<img src="images/{{this.image}}" alt="Img">
								<h2>{{this.name}}</h2>
								<span class="time">{{this.publishDate}}<br> by: {{this.author}}</span>
								{{{this.description}}}
						{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>

</html>